    <div class="product-filter-column col-3">
      <h6>Filters</h6>
      <div class="input-group mb-3 mt-3">
        <div class="custom-control custom-checkbox store-filter-group">
          <div class="store-filter">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Open for delivery</label>
          </div>                                          
        </div>
      </div>
    </div>    
    <div class="product-cards-container col-9">
      <h3>Featured</h3>
      <div class="product-cards">
        <% Product.all.each do |product| %>
          <div class="card text-center">
            <%= link_to product_path(product) do %>
              <div class="card-body">
                <img src="" alt="product image">
                <h4 class="card-title"><%= product.productName %></h4>
                <h5 class="card-title">by Brand Id: <%= product.brand_id %></h5>
                <p class="card-text"><%= truncate(product.description, length: 100) %></p>
                <p class="card-text">Type: <%= product.type_id %></p>
                  <div class="product-price">
                    <p class="card-text">Price: <%= product.price %></p>
                  </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>