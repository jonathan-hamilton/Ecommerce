<div class="container-fluid">
  <div class="store-search-container">
    <div class="store-filter-column col-3">
      <h6>Filters</h6>
      <div class="input-group mb-3 mt-3">
        <div class="custom-control custom-checkbox store-filter-group">
          <div class="store-filter">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Open for delivery</label>
          </div>
          <div class="store-filter">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Free delivery</label>
          </div>
          <div class="store-filter">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">No delivery minimum</label>
          </div>
          <div class="store-filter">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Accepts credit cards</label>   
          </div>                                             
        </div>
      </div>
    </div>
    <div class="store-cards-container col-9">
      <h3>Stores</h3>
      <div class="store-cards ">
        <% @stores.each do |store| %>
          <div class="card text-center">
            <%= link_to store_path(store) do%>
              <div class="store-card-body">              
                <div class="store-card-img container">
                  <%= image_tag(store.pic, :alt => "store image", class:"store-card-img") %>
                </div>
                <div class="store-card-title-text container">
                  <h5 class="store-card-title"><%= store.storeName %></h5>              
                  <p class="store-card-text"><%= store.details %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>