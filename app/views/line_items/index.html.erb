<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Line Items</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Quantity</th>
        <th>ProductId</th>
        <th>OrderId</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @line_items.all.each do |line_item| %>
        <tr>
          <td><%= line_item.id %></td>
          <td><%= line_item.quantity %></td>
          <td><%= line_item.product_id %></td>
          <td><%= line_item.order_id %></td>
          <td><%= link_to 'Show', line_item %></td>
          <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
          <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Continue Shopping?', store_url(@store_id), class: "btn btn-outline-success my-2 my-sm-0" %>

  <%= link_to 'Checkout', order_url(@order), class: "btn btn-outline-success my-2 my-sm-0" %>
</div>