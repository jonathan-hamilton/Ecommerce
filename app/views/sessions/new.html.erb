<div class="container-fluid">
    <h1 class="text mt-4">Login</h1>

    <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

    <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <%# <div class="form-group row"> %>
    <div class="field">
        <%= form.label :password %> 
        <%= form.password_field :password %>
    </div> 

    <div class="actions">
        <%= form.submit "Login" %>
    </div>
    <% end %>
</div>


